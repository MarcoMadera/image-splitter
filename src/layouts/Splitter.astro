---
import Layout from "./Layout.astro";
import SideBar from "components/SideBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <SideBar
    class="row-start-3 row-end-4 max-lg:col-span-2 onload-animation lg:col-2 lg:col-start-2 lg:col-end-3"
    ><slot name="before-main" />
  </SideBar>
  <div
    id="content-wrapper"
    class="row-start-2 row-end-3 max-lg:col-span-2 grid-rows-1 overflow-hidden onload-animation lg:col-2 lg:col-start-2 lg:col-end-3"
  >
    <main id="swup" class="transition-fade">
      <slot />
    </main>
  </div>
  <SideBar
    class="row-start-4 row-end-5 col-span-2 onload-animation lg:row-start-2 lg:row-end-4 lg:col-1 lg:col-start-1 lg:col-end-2"
  >
    <slot name="after-main" />
  </SideBar>
</Layout>
